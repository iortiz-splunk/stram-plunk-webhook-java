# Stream API Secret (used for X-Signature verification)
STREAM_API_SECRET="your_stream_api_secret_here"

# Splunk HTTP Event Collector (HEC) URL and Token
SPLUNK_HEC_URL="https://localhost:8088/services/collector/event"
SPLUNK_HEC_TOKEN="your_splunk_hec_token_here"
SPLUNK_HEC_SSL_VERIFY=false # Set to true in production with proper CA certs

# Redis Connection Details
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0

# Name of the Redis queue for webhooks
WEBHOOK_QUEUE_NAME="stream_webhooks"

# Deduplication window in seconds (e.g., 5 minutes)
DEDUPLICATION_WINDOW_SECONDS=300